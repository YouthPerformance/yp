---
import { Header } from '@yp/ui';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "The world's best silent basketball - according to the kids. Play anytime, anywhere without the noise." } = Astro.props;

const navLinks = [
  { label: "ACADEMY", href: "https://app.youthperformance.com" },
  { label: "SHOP", href: "https://shop.youthperformance.com" },
  { label: "NEOBALL", href: "/" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="color-scheme" content="dark" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@500;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-wolf-black text-white antialiased overflow-x-hidden">
    <Header client:idle logoHref="/" links={navLinks} />
    <main style="padding-top: 64px;">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  ::selection {
    background: rgba(0, 246, 224, 0.3);
    color: white;
  }

  /* Glow effects */
  .glow-cyan {
    box-shadow: 0 0 20px rgba(0, 246, 224, 0.3),
                0 0 40px rgba(0, 246, 224, 0.1);
  }

  .glow-pink {
    box-shadow: 0 0 20px rgba(255, 20, 147, 0.4),
                0 4px 24px rgba(0, 0, 0, 0.4);
  }

  /* Shimmer text effect */
  .text-shimmer {
    background: linear-gradient(
      110deg,
      #6B6B6B 0%,
      #8A8A8A 20%,
      #FFFFFF 35%,
      #F5F5F5 50%,
      #FFFFFF 65%,
      #8A8A8A 80%,
      #6B6B6B 100%
    );
    background-size: 300% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: shimmer 8s ease-in-out infinite;
  }

  @keyframes shimmer {
    0% { background-position: 300% center; }
    100% { background-position: -300% center; }
  }
</style>
