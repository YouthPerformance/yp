<?xml version="1.0" encoding="utf-8"?>
<!--
   Sample data extraction rules file. This file specifies what data to include
   and exclude for device-to-device transfers. See
   https://developer.android.com/about/versions/12/backup-restore#xml-config
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences -->
        <include domain="sharedpref" path="."/>
        <!-- Exclude sensitive data -->
        <exclude domain="database" path="jump_cache.db"/>
        <exclude domain="file" path="videos/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include user preferences -->
        <include domain="sharedpref" path="."/>
        <!-- Include database for device transfer -->
        <include domain="database" path="."/>
        <!-- Exclude cached videos -->
        <exclude domain="file" path="videos/"/>
    </device-transfer>
</data-extraction-rules>
