{
  "name": "@yp/web-academy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo --port 3003",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "typecheck": "echo 'Skipping - BetterAuth migration pending'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:critical": "vitest run --testPathPattern='(auth|stripe|convex)'",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf .next .turbo node_modules",
    "build:cf": "npx @opennextjs/cloudflare build",
    "preview": "npm run build:cf && npx wrangler pages dev",
    "deploy:preview": "npm run build:cf && npx wrangler pages deploy .open-next/assets --project-name=web-academy",
    "deploy:production": "npm run build:cf && npx wrangler pages deploy .open-next/assets --project-name=web-academy --branch=production"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vercel/edge-config": "^1.4.3",
    "@yp/alpha": "workspace:*",
    "@yp/brand-assets": "workspace:*",
    "@yp/ui": "workspace:*",
    "better-auth": "^1.4.10",
    "better-sqlite3": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.31.2",
    "framer-motion": "^11.15.0",
    "groq-sdk": "^0.5.0",
    "hls.js": "^1.5.18",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-globe.gl": "^2.37.0",
    "stripe": "^17.5.0",
    "tailwind-merge": "^2.6.0",
    "three": "^0.182.0",
    "zod": "^3.23.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^1.14.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/coverage-v8": "^3.0.0",
    "autoprefixer": "^10",
    "postcss": "^8",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "vitest": "^3.0.0",
    "wrangler": "^4.54.0"
  }
}
