---
/**
 * AgeBadge - Age band indicator
 *
 * Age-specific colors are kept as hardcoded values since they represent
 * distinct age groups (not theme-dependent).
 */
interface Props {
  ageMin: number;
  ageMax: number;
  class?: string;
}

const { ageMin, ageMax, class: className = "" } = Astro.props;

// Determine badge style based on age range
let badgeClass = "age-7-9";
let label = `${ageMin}â€“${ageMax}`;

if (ageMin >= 14) {
  badgeClass = "age-14-18";
} else if (ageMin >= 10) {
  badgeClass = "age-10-13";
}

// Special labels
if (ageMin <= 7 && ageMax >= 18) {
  label = "All Ages";
}
---

<span class={`age-badge ${badgeClass} ${className}`}>{label}</span>
