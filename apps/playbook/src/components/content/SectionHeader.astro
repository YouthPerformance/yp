---
/**
 * SectionHeader - Chapter/section divider with chapter label
 *
 * Uses CSS variables from global.css - no theme prop needed.
 */
interface Props {
  chapter: string;
  title: string;
  id: string;
  class?: string;
}

const { chapter, title, id, class: className = "" } = Astro.props;
---

<section id={id} class={`section-header ${className}`}>
  <div class="chapter-label">{chapter}</div>
  <h2 class="font-bebas text-display-md" style="color: var(--text-primary);">{title}</h2>
</section>
