---
/**
 * FAQSection - Collapsible FAQ list for AEO
 */
interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQ[];
  title?: string;
  subtitle?: string;
  theme?: 'basketball' | 'barefoot';
}

const { faqs, title = 'Frequently Asked Questions', subtitle, theme = 'basketball' } = Astro.props;
const bgColor = theme === 'barefoot' ? 'bg-earth-dark' : 'bg-paper-dark';
---

<section id="faq" class={`${bgColor} py-12 px-6 mt-8`}>
  <div class="text-center max-w-[600px] mx-auto mb-8">
    <h2 class="font-display text-2xl mb-2">{title}</h2>
    {subtitle && <p class="text-ink-muted text-[0.95rem]">{subtitle}</p>}
  </div>

  <div class="max-w-[700px] mx-auto">
    {faqs.map((faq) => (
      <details class="faq-item group">
        <summary class="faq-question list-none">
          <span class="flex-1">{faq.question}</span>
          <span class="font-mono text-xl text-gold group-open:rotate-45 transition-transform">+</span>
        </summary>
        <div class="faq-answer">{faq.answer}</div>
      </details>
    ))}
  </div>
</section>
