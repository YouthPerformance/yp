---
/**
 * SafetyBox - Warning/safety callout for youth training content
 *
 * Uses CSS variables from global.css - no theme prop needed.
 */
interface Props {
  title?: string;
  class?: string;
}

const { title = "Stop Immediately If You Experience", class: className = "" } = Astro.props;
---

<div class={`safety-box ${className}`}>
  <div class="safety-title">
    <span>⚠️</span>
    <span>{title}</span>
  </div>
  <div class="text-body-sm" style="color: var(--text-secondary);">
    <slot />
  </div>
</div>
