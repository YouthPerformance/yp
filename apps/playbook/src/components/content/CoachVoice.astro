---
/**
 * CoachVoice - Expert callout/quote block
 * Adds unique first-person coaching insight that AI can't replicate.
 *
 * Uses CSS variables from global.css - no theme prop needed.
 */
interface Props {
  author?: "adam" | "james" | "wolf";
  label?: string;
  class?: string;
}

const { author = "wolf", label, class: className = "" } = Astro.props;

const config = {
  adam: {
    icon: "üèÄ",
    label: label || "Coach Adam's Take",
  },
  james: {
    icon: "ü¶∂",
    label: label || "James's Take",
  },
  wolf: {
    icon: "üê∫",
    label: label || "Wolf Says",
  },
};

const { icon, label: displayLabel } = config[author];
---

<div class={`coach-voice ${className}`}>
  <div class="flex items-center gap-1.5 mb-1.5 font-mono text-label uppercase tracking-widest" style="color: var(--accent-primary);">
    <span>{icon}</span>
    <span>{displayLabel}</span>
  </div>
  <blockquote>
    <slot />
  </blockquote>
</div>
