---
/**
 * Input Component
 * YP Design System - Playbook
 *
 * @prop type - Input type
 * @prop placeholder - Placeholder text
 * @prop error - Error message (shows error state)
 * @prop label - Optional label
 * @prop hint - Optional hint text
 * @prop icon - Optional icon slot name
 * @prop disabled - Disabled state
 * @prop required - Required field
 */

interface Props {
  type?: "text" | "email" | "password" | "number" | "tel" | "url" | "search";
  placeholder?: string;
  error?: string;
  label?: string;
  hint?: string;
  disabled?: boolean;
  required?: boolean;
  name?: string;
  id?: string;
  value?: string;
  class?: string;
}

const {
  type = "text",
  placeholder = "",
  error,
  label,
  hint,
  disabled = false,
  required = false,
  name,
  id,
  value,
  class: className = "",
  ...rest
} = Astro.props;

const inputId = id || name || `input-${Math.random().toString(36).slice(2, 9)}`;
const hasError = !!error;
---

<div class={`input-wrapper ${className}`}>
  {label && (
    <label for={inputId} class="input-label">
      {label}
      {required && <span class="text-[var(--state-error)] ml-1">*</span>}
    </label>
  )}

  <div class="input-container">
    <slot name="icon-left" />

    <input
      type={type}
      id={inputId}
      name={name}
      placeholder={placeholder}
      disabled={disabled}
      required={required}
      value={value}
      class:list={[
        'input-field',
        hasError && 'input-error',
      ]}
      aria-invalid={hasError}
      aria-describedby={error ? `${inputId}-error` : hint ? `${inputId}-hint` : undefined}
      {...rest}
    />

    <slot name="icon-right" />
  </div>

  {error && (
    <p id={`${inputId}-error`} class="input-message error">
      {error}
    </p>
  )}

  {hint && !error && (
    <p id={`${inputId}-hint`} class="input-message hint">
      {hint}
    </p>
  )}
</div>

<style>
  .input-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .input-label {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-secondary);
  }

  .input-container {
    position: relative;
    display: flex;
    align-items: center;
  }

  .input-field {
    width: 100%;
    padding: 0.75rem 1rem;
    background-color: var(--bg-elevated);
    border: 1px solid var(--border-default);
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 200ms ease;
  }

  .input-field::placeholder {
    color: var(--text-muted);
  }

  .input-field:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px rgba(0, 246, 224, 0.1);
  }

  .input-field:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .input-field.input-error {
    border-color: var(--state-error);
  }

  .input-field.input-error:focus {
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
  }

  .input-message {
    font-size: 0.75rem;
    margin-top: 0.25rem;
  }

  .input-message.error {
    color: var(--state-error);
  }

  .input-message.hint {
    color: var(--text-muted);
  }

  /* Icon positioning */
  .input-container :global([slot="icon-left"]) {
    position: absolute;
    left: 1rem;
    color: var(--text-muted);
    pointer-events: none;
  }

  .input-container:has([slot="icon-left"]) .input-field {
    padding-left: 2.75rem;
  }

  .input-container :global([slot="icon-right"]) {
    position: absolute;
    right: 1rem;
    color: var(--text-muted);
  }

  .input-container:has([slot="icon-right"]) .input-field {
    padding-right: 2.75rem;
  }
</style>
