  "@type": "Organization",
  "name": "Youth Performance",
  "alternateName": "YP",
  "url": "https://youthperformance.com",
  "logo": "https://youthperformance.com/logo/yp-logo.png",
  "description": "Elite training for every kid, everywhere. The most advanced biomechanics curriculum for youth sports.",
  "foundingDate": "2020",
  "founder": [
    {
      "@type": "Person",
      "name": "James Scott",
      "jobTitle": "Co-founder & Director of Performance",
      "description": "Masters in Sports Science and Biomechanics. Professional Athletes Performance Coach. Creator of Weak Feet Don't Eat.",
      "sameAs": [
        "https://playbook.youthperformance.com/authors/james-scott/",
        "https://instagram.com/weakfeetdonteat"
      ]
    },
    {
      "@type": "Person",
      "name": "Adam Harrington",
      "jobTitle": "Global Head of Basketball",
      "description": "NBA Skills Coach. Kevin Durant's longtime skills trainer.",
      "sameAs": [
        "https://playbook.youthperformance.com/authors/adam-harrington/",
        "https://en.wikipedia.org/wiki/Adam_Harrington_(basketball)"
      ]
    }
  ],
  "address": {
    "@type": "PostalAddress",
    "addressRegion": "California",
    "addressCountry": "US"
  },
  "sameAs": [
    "https://instagram.com/youthperformance",
    "https://twitter.com/youthperf"
  ]
})} />

<style>
  /* ═══════════════════════════════════════════════════════════════════════════
     $100M FOOTER - The Big Brand Look
     ═══════════════════════════════════════════════════════════════════════════ */

  .footer-100m {
    width: 100%;
    background-color: #000000;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding: 80px 24px 48px;
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* ─────────────────────────────────────────────────────────────────────────────
     TOP SECTION: Brand + Navigation
     ───────────────────────────────────────────────────────────────────────────── */

  .footer-top {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    margin-bottom: 96px;
  }

  @media (min-width: 768px) {
    .footer-top {
      grid-template-columns: 4fr 4fr 2fr 2fr;
      gap: 48px;
    }
  }

  /* Brand Column */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .footer-tagline {
    font-family: "Bebas Neue", sans-serif;
    font-size: 3rem;
    line-height: 0.9;
    letter-spacing: -0.02em;
    color: #ffffff;
    margin: 0;
  }

  @media (min-width: 768px) {
    .footer-tagline {
      font-size: 3.5rem;
    }
  }

  .tagline-accent {
    color: var(--accent-primary);
  }

  .footer-mission {
    font-family: "Inter", sans-serif;
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--text-secondary);
    max-width: 24rem;
    margin: 0;
  }

  /* Spacer - Desktop only */
  .footer-spacer {
    display: none;
  }

  @media (min-width: 768px) {
    .footer-spacer {
      display: block;
    }
  }

  /* Navigation Columns */
  .footer-nav-col {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .footer-nav-heading {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.6875rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-muted);
    margin: 0;
  }

  .footer-nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .footer-nav-links a {
    font-family: "Inter", sans-serif;
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 200ms ease;
  }

  .footer-nav-links a:hover {
    color: #ffffff;
  }

  .footer-nav-links a.link-primary {
    color: #ffffff;
  }

  .footer-nav-links a.link-primary:hover {
    color: var(--accent-primary);
  }

  /* ─────────────────────────────────────────────────────────────────────────────
     BOTTOM BAR: The Signature
     ───────────────────────────────────────────────────────────────────────────── */

  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 24px;
    align-items: flex-start;
    padding-top: 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-end;
    }
  }

  /* Left: System Status (Easter Egg) */
  .footer-meta {
    display: flex;
    gap: 16px;
  }

  .footer-status {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.625rem;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 200ms ease;
  }

  .footer-status:hover {
    color: var(--accent-primary);
  }

  /* Right: Origin Tag */
  .footer-origin {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--text-secondary);
  }

  .origin-divider {
    color: var(--accent-primary);
    margin: 0 8px;
  }
</style>
