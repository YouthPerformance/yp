---
/**
 * Header - Wolf Pack Glass (Mobile-First Centered)
 * Matches the YP unified header design:
 * - Hamburger LEFT
 * - YP Logo + BETA badge CENTERED
 * - Avatar RIGHT
 */
interface Props {
  showAvatar?: boolean;
  avatarInitial?: string;
}

const { showAvatar = true, avatarInitial = "M" } = Astro.props;

const navLinks = [
  { href: "/barefoot-training/", label: "Barefoot" },
  { href: "/basketball/", label: "Basketball" },
  { href: "/parent-sidelines/", label: "Parent Q&A" },
  { href: "/drills/", label: "Drills" },
  { href: "https://academy.youthperformance.com", label: "Academy", external: true },
];
---

<header class="header-wrapper">
  <div class="header-glass">
    <!-- LEFT: Hamburger Menu -->
    <button
      type="button"
      class="hamburger-btn"
      aria-label="Toggle menu"
      onclick="document.querySelector('.mobile-nav').classList.toggle('open'); this.classList.toggle('active')"
    >
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <!-- CENTER: Logo + Beta Badge -->
    <div class="header-center">
      <a href="/" class="logo-link">
        <span class="logo-text">YP</span>
      </a>
      <div class="beta-badge">
        <span class="beta-dot"></span>
        <span class="beta-label">BETA</span>
      </div>
    </div>

    <!-- RIGHT: Avatar -->
    {showAvatar && (
      <div class="avatar">
        <span class="avatar-initial">{avatarInitial}</span>
      </div>
    )}
  </div>

  <!-- Mobile Navigation Overlay -->
  <nav class="mobile-nav">
    <div class="mobile-nav-content">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="mobile-nav-link"
          target={link.external ? "_blank" : undefined}
          rel={link.external ? "noopener noreferrer" : undefined}
        >
          {link.label}
        </a>
      ))}
      <a href="https://academy.youthperformance.com" class="mobile-nav-cta">
        Start Training â†’
      </a>
    </div>
  </nav>
</header>

<style>
  /* Wrapper with padding for floating effect */
  .header-wrapper {
    position: sticky;
    top: 0;
    z-index: 150;
    padding: 12px 16px;
  }

  /* Floating Glass Container */
  .header-glass {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 56px;
    padding: 0 16px;
    background: linear-gradient(135deg, rgba(255,255,255,0.08) 0%, rgba(100,150,255,0.04) 50%, rgba(0,0,0,0.4) 100%);
    backdrop-filter: blur(24px) saturate(180%);
    -webkit-backdrop-filter: blur(24px) saturate(180%);
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,0.1);
    box-shadow:
      0 8px 32px rgba(0,0,0,0.3),
      inset 0 1px 0 rgba(255,255,255,0.1),
      0 0 20px rgba(0, 246, 224, 0.1);
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Hamburger Button */
  .hamburger-btn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 44px;
    height: 44px;
    padding: 12px;
    background: transparent;
    border: none;
    cursor: pointer;
    border-radius: 12px;
    transition: background-color 0.2s ease;
  }

  .hamburger-btn:hover {
    background-color: rgba(0, 246, 224, 0.1);
  }

  .hamburger-line {
    width: 20px;
    height: 2px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 1px;
    transition: all 0.3s ease;
  }

  .hamburger-btn.active .hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .hamburger-btn.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger-btn.active .hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Center: Logo + Beta */
  .header-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .logo-link {
    text-decoration: none;
  }

  .logo-text {
    font-family: "Bebas Neue", Impact, sans-serif;
    font-size: 36px;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: #00F6E0;
    line-height: 1;
    text-shadow: 0 0 20px rgba(0, 246, 224, 0.5);
  }

  /* Beta Badge */
  .beta-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 6px 14px;
    border-radius: 9999px;
    border: 1px solid #00F6E0;
    background-color: transparent;
    box-shadow: 0 0 12px rgba(0, 246, 224, 0.2);
  }

  .beta-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: #00F6E0;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
  }

  .beta-label {
    font-family: ui-monospace, SFMono-Regular, monospace;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: #00F6E0;
    text-transform: uppercase;
  }

  /* Avatar */
  .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #E91E8C 0%, #D4145A 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid rgba(0, 246, 224, 0.2);
    box-shadow: 0 4px 12px rgba(233, 30, 140, 0.3);
  }

  .avatar-initial {
    font-family: "Bebas Neue", Impact, sans-serif;
    font-size: 18px;
    font-weight: 700;
    color: white;
    line-height: 1;
  }

  /* Mobile Navigation Overlay */
  .mobile-nav {
    display: none;
    position: fixed;
    top: 80px;
    left: 16px;
    right: 16px;
    bottom: 16px;
    background: linear-gradient(180deg, rgba(0,0,0,0.95) 0%, rgba(0,0,0,0.98) 100%);
    backdrop-filter: blur(24px);
    -webkit-backdrop-filter: blur(24px);
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,0.1);
    z-index: 140;
    overflow: hidden;
  }

  .mobile-nav.open {
    display: block;
  }

  .mobile-nav-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 24px;
    padding: 32px;
  }

  .mobile-nav-link {
    font-family: "Bebas Neue", Impact, sans-serif;
    font-size: 28px;
    letter-spacing: 0.1em;
    text-decoration: none;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.8);
    transition: color 0.2s ease;
  }

  .mobile-nav-link:hover {
    color: #00F6E0;
  }

  .mobile-nav-cta {
    margin-top: 16px;
    padding: 14px 32px;
    border-radius: 12px;
    background-color: #00F6E0;
    color: #0f0f0f;
    font-size: 14px;
    font-weight: 700;
    text-decoration: none;
    font-family: system-ui, sans-serif;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: all 0.2s ease;
  }

  .mobile-nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 246, 224, 0.4);
  }

  /* Desktop: Show nav links inline, hide hamburger */
  @media (min-width: 768px) {
    .hamburger-btn {
      display: none;
    }

    .header-glass {
      justify-content: center;
    }

    .header-center {
      position: relative;
      left: auto;
      transform: none;
    }

    .avatar {
      position: absolute;
      right: 16px;
    }

    .mobile-nav {
      display: none !important;
    }
  }
</style>
