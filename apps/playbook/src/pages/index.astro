---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";

const pillars = [
  {
    title: "Youth Basketball Drills",
    description:
      "50+ age-appropriate drills for players ages 7‚Äì18. Ball-handling, shooting, footwork‚Äîorganized by skill level.",
    url: "/basketball/youth-basketball-drills/",
    icon: "üèÄ",
    theme: "basketball",
    author: "Adam Harrington",
    badge: "NBA Skills Coach",
  },
  {
    title: "Barefoot Training",
    description:
      "Science-backed barefoot training guide for athletes. Build foot strength, balance, and performance.",
    url: "/barefoot-training/",
    icon: "ü¶∂",
    theme: "barefoot",
    author: "James Scott",
    badge: "Movement Specialist",
  },
];

const comingSoon = [
  {
    title: "Parent Sidelines (Q&A)",
    description: "Answer every youth sports question",
    icon: "üë®‚Äçüë©‚Äçüëß",
    theme: "parent",
  },
  {
    title: "Drill Library",
    description: "Searchable database of all drills",
    icon: "üìö",
    theme: "drills",
  },
  {
    title: "Practice Templates",
    description: "Ready-to-run practice plans",
    icon: "üìã",
    theme: "templates",
  },
];
---

<BaseLayout
  title="Youth Performance Playbook | Expert Training for Young Athletes"
  description="Expert-reviewed training content for youth athletes. Age-appropriate drills, barefoot training, and skill development guides from NBA coaches and movement specialists."
>
  <Header />

  <!-- Hero -->
  <header class="py-16 px-6 relative" style="background: var(--gradient-dark);">
    <div class="max-w-4xl mx-auto text-center">
      <span class="font-mono text-xs uppercase tracking-widest text-bark-muted mb-4 block">Youth Performance</span>
      <h1 class="font-display text-4xl md:text-6xl font-bold text-ink leading-tight mb-6">
        The Playbook
      </h1>
      <p class="text-xl text-bark-soft max-w-2xl mx-auto mb-8">
        Expert-reviewed training content for youth athletes.
        Age-appropriate drills and skill development guides from NBA coaches and movement specialists.
      </p>
      <div class="flex flex-wrap justify-center gap-4 text-sm font-mono text-bark-muted">
        <span>Expert Reviewed</span>
        <span class="text-gold">‚Ä¢</span>
        <span>Age-Appropriate</span>
        <span class="text-gold">‚Ä¢</span>
        <span>Science-Backed</span>
      </div>
    </div>
  </header>

  <!-- Main Pillars -->
  <main class="py-16 px-6">
    <div class="max-w-5xl mx-auto">
      <h2 class="font-mono text-xs uppercase tracking-widest text-bark-muted mb-8 text-center">Start Training</h2>

      <div class="grid md:grid-cols-2 gap-6 mb-16">
        {pillars.map((pillar) => (
          <a
            href={pillar.url}
            class={`block bg-white rounded-xl shadow-card border-t-4 overflow-hidden hover:shadow-elevated hover:-translate-y-1 transition-all ${pillar.theme === 'basketball' ? 'border-gold' : 'border-moss'}`}
          >
            <div class="p-8">
              <div class={`w-16 h-16 rounded-lg flex items-center justify-center text-3xl mb-4 ${pillar.theme === 'basketball' ? 'bg-gold/10' : 'bg-moss/10'}`}>
                {pillar.icon}
              </div>
              <h3 class="font-display font-bold text-2xl text-ink mb-2">{pillar.title}</h3>
              <p class="text-bark-soft mb-4">{pillar.description}</p>
              <div class="flex items-center gap-2 text-sm">
                <span class={`px-2 py-0.5 rounded text-xs font-mono uppercase ${pillar.theme === 'basketball' ? 'bg-trust-blue text-white' : 'bg-copper text-white'}`}>
                  {pillar.badge}
                </span>
                <span class="text-bark-muted">{pillar.author}</span>
              </div>
            </div>
            <div class={`px-8 py-4 text-sm font-medium flex items-center justify-between ${pillar.theme === 'basketball' ? 'bg-gold/5 text-gold' : 'bg-moss/5 text-moss'}`}>
              <span>Read the Guide</span>
              <span>‚Üí</span>
            </div>
          </a>
        ))}
      </div>

      <!-- Coming Soon -->
      <h2 class="font-mono text-xs uppercase tracking-widest text-bark-muted mb-6 text-center">Coming Soon</h2>
      <div class="grid md:grid-cols-3 gap-4">
        {comingSoon.map((item) => (
          <div class="bg-paper-dark rounded-lg p-6 text-center opacity-60">
            <div class="text-3xl mb-3">{item.icon}</div>
            <h3 class="font-display font-semibold text-ink mb-1">{item.title}</h3>
            <p class="text-sm text-bark-muted">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </main>

  <!-- Trust Bar -->
  <section class="bg-ink text-white py-12 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="font-display text-2xl font-semibold mb-4">Expert Content, Not AI Slop</h2>
      <p class="text-white/70 mb-8 max-w-2xl mx-auto">
        Every guide is written or reviewed by credentialed coaches.
        We don't generate content with AI and publish it unchecked.
      </p>
      <div class="flex flex-wrap justify-center gap-8">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-trust-blue to-ink flex items-center justify-center text-white font-display font-bold">AH</div>
          <div class="text-left">
            <div class="font-medium">Adam Harrington</div>
            <div class="text-xs text-white/60">NBA Skills Coach</div>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-moss to-ink flex items-center justify-center text-white font-display font-bold">JS</div>
          <div class="text-left">
            <div class="font-medium">James Scott</div>
            <div class="text-xs text-white/60">Movement Specialist</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>
