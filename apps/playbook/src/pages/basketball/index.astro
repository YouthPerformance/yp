      <h2 class="font-mono text-xs uppercase tracking-widest text-bark-muted mb-6">Explore Training Content</h2>

      <div class="grid gap-4">
        {categories.map((cat) => (
          <a
            href={cat.url}
            class={`block bg-white rounded-lg shadow-card border border-black/5 p-6 hover:shadow-elevated hover:-translate-y-0.5 transition-all ${cat.badge === 'Coming Soon' ? 'opacity-60 pointer-events-none' : ''}`}
            aria-disabled={cat.badge === 'Coming Soon'}
          >
            <div class="flex items-start gap-4">
              <div class="w-14 h-14 bg-gold rounded-lg flex items-center justify-center text-2xl flex-shrink-0">
                {cat.icon}
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="font-display font-semibold text-lg text-ink">{cat.title}</h3>
                  {cat.badge && (
                    <span class={`px-2 py-0.5 rounded text-xs font-mono uppercase ${
                      cat.badge === 'Pillar Guide' ? 'bg-gold text-white' :
                      cat.badge === 'New' ? 'bg-trust-blue text-white' :
                      'bg-paper-dark text-bark-muted'
                    }`}>
                      {cat.badge}
                    </span>
                  )}
