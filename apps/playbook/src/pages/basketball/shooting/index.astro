---
import { getCollection } from "astro:content";
import ClusterHubLayout from "@/layouts/ClusterHubLayout.astro";
import DrillCard from "@/components/content/DrillCard.astro";

// Get Shooting Mechanics drills
const allDrills = await getCollection("drills");
const shootingDrills = allDrills.filter(
  (d) => d.data.cluster === "shooting-mechanics" || d.data.category === "shooting",
);

// Get related Q&A
const allQA = await getCollection("parent-sidelines");
const relatedQA = allQA.filter(
  (qa) =>
    qa.data.category === "skills-mechanics" ||
    qa.data.keywords.some(
      (k) => k.includes("shooting") || k.includes("chicken") || k.includes("elbow"),
    ),
);

const breadcrumbs = [
  { label: "Home", url: "/" },
  { label: "Basketball", url: "/basketball/" },
  { label: "Shooting Mechanics" },
];

const featuredPages = [
  {
    title: "Fix the 'Chicken Wing'",
    description: "Correct the #1 mechanical flaw in youth shooting: elbow flare.",
    url: "#chicken-wing-fix",
    icon: "üêî",
    badge: "Most Common",
  },
  {
    title: "The 'Gooseneck' Release",
    description: "Master the follow-through that creates perfect backspin.",
    url: "#gooseneck-release",
    icon: "ü¶¢",
  },
  {
    title: "Stop the Two-Hand Push",
    description: "Transition from chest-pass shooting to proper one-hand form.",
    url: "#two-hand-push-fix",
    icon: "‚úã",
    badge: "Youth",
  },
];

const relatedHubs = [
  { title: "Youth Drills", url: "/basketball/youth-basketball-drills/", icon: "üèÄ" },
  { title: "Silent Training", url: "/basketball/silent-training/", icon: "ü§´" },
  { title: "Footwork", url: "/basketball/footwork/", icon: "üëü" },
];
---

<ClusterHubLayout
  title="Shooting Mechanics Lab"
  description="Stop guessing. Build a repeatable, elite jump shot with drills from NBA Skills Coach Adam Harrington. Fix the chicken wing, perfect your follow-through, and develop a mechanically sound jumper."
  canonical="https://playbook.youthperformance.com/basketball/shooting/"
  breadcrumbs={breadcrumbs}
  clusterIcon="üéØ"
  clusterBadge="Pro Level"
  featuredPages={featuredPages}
  relatedHubs={relatedHubs}
  showSafetyDisclaimer={false}
  author={{
    name: "Adam Harrington",
    jobTitle: "NBA Skills Coach",
    description: "Former NBA player ‚Ä¢ Kevin Durant's trainer ‚Ä¢ Brooklyn Nets skills consultant",
  }}
  keywords={["basketball shooting drills", "fix chicken wing shooting", "youth shooting mechanics", "shooting form correction"]}
>
  <!-- Authority Hero -->
  <section class="mb-12 flex flex-col md:flex-row items-center gap-6 bg-gradient-to-br from-ink to-bark text-white p-8 rounded-xl">
    <div class="w-24 h-24 rounded-full bg-gradient-to-br from-gold to-copper flex items-center justify-center text-white font-display font-bold text-3xl flex-shrink-0 border-4 border-white/20">
      AH
    </div>
    <div>
      <h2 class="font-display text-2xl font-bold text-gold mb-2">The "Micro-Mechanics" Philosophy</h2>
      <p class="text-white/80 italic">
        "Most kids practice misses. We practice makes. Mechanics aren't about looking pretty; they're about removing variables. Less movement = More consistency."
      </p>
      <p class="text-white/60 text-sm mt-2">‚Äî Adam Harrington, NBA Skills Coach</p>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="mb-12">
    <h2 class="font-display text-2xl font-bold mb-4">Why Mechanics Matter</h2>
    <div class="bg-white rounded-lg shadow-card p-6">
      <p class="text-bark-soft mb-4">
        Every shooting problem has a root cause. The "chicken wing" isn't just a bad habit‚Äîit's usually a compensation for poor hand placement or limited shoulder mobility.
      </p>
      <p class="text-bark-soft mb-4">
        Adam Harrington's approach focuses on <strong>finding and fixing the root cause</strong>, not just telling kids "tuck your elbow."
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
        <div class="text-center p-4 bg-paper-dark rounded">
          <div class="text-3xl mb-2">üëÅ</div>
          <div class="font-semibold text-sm">Diagnose</div>
          <div class="text-xs text-bark-muted">Find the root cause</div>
        </div>
        <div class="text-center p-4 bg-paper-dark rounded">
          <div class="text-3xl mb-2">üîß</div>
          <div class="font-semibold text-sm">Constrain</div>
          <div class="text-xs text-bark-muted">Use environment to force change</div>
        </div>
        <div class="text-center p-4 bg-paper-dark rounded">
          <div class="text-3xl mb-2">üîÅ</div>
          <div class="font-semibold text-sm">Repeat</div>
          <div class="text-xs text-bark-muted">Build new motor patterns</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Drills Section -->
  <section class="mb-12">
    <h2 class="font-display text-2xl font-bold mb-6">Corrective Shooting Drills</h2>
    <p class="text-bark-soft mb-8 max-w-2xl">
      These drills target the most common mechanical flaws in youth shooting. Start with the problem that matches your child's shot.
    </p>

    <div class="space-y-8">
      {shootingDrills.map((drill, index) => (
        <div id={drill.data.slug}>
          <DrillCard
            number={index + 1}
            title={drill.data.title}
            tags={drill.data.tags.slice(0, 3)}
            ageBadge={{ label: `${drill.data.ageMin}-${drill.data.ageMax}`, class: drill.data.ageMin < 10 ? "age-7-9" : "age-10-13" }}
            description={drill.data.description}
            steps={drill.data.steps}
            coachingCues={drill.data.coachingCues}
            duration={drill.data.duration}
            reps={drill.data.reps}
            difficulty={drill.data.difficulty.charAt(0).toUpperCase() + drill.data.difficulty.slice(1) as "Beginner" | "Intermediate" | "Advanced" | "Scalable"}
          />
          {drill.data.coachNote && (
            <div class="mt-4 ml-4 pl-4 border-l-2 border-gold bg-paper-dark p-4 rounded-r">
              <p class="text-sm italic text-bark-soft">{drill.data.coachNote}</p>
            </div>
          )}
        </div>
      ))}
    </div>
  </section>

  <!-- Parent Q&A Section -->
  {relatedQA.length > 0 && (
    <section class="bg-paper-dark p-8 rounded-xl mb-8">
      <h2 class="font-display text-xl font-bold mb-6">Troubleshooting the Jumper</h2>
      <div class="space-y-4">
        {relatedQA.map(qa => (
          <a href={`/parent-sidelines/${qa.slug}/`} class="block p-5 bg-white rounded-lg shadow-sm hover:shadow-md transition">
            <h3 class="font-semibold text-ink mb-2">"{qa.data.question}"</h3>
            <p class="text-bark-soft text-sm line-clamp-2">{qa.data.directAnswer}</p>
            <span class="text-gold text-sm mt-2 inline-block">Read answer ‚Üí</span>
          </a>
        ))}
      </div>
    </section>
  )}

  <!-- Progression Guide -->
  <section class="bg-white rounded-lg shadow-card p-6 mb-8">
    <h2 class="font-display text-xl font-bold mb-4">The Shooting Progression</h2>
    <ol class="space-y-4">
      <li class="flex items-start gap-4">
        <span class="w-8 h-8 bg-gold text-white rounded-full flex items-center justify-center font-mono text-sm font-bold flex-shrink-0">1</span>
        <div>
          <strong class="text-ink">Form Shooting (0-5 feet)</strong>
          <p class="text-bark-soft text-sm">One hand, no guide hand, master the release</p>
        </div>
      </li>
      <li class="flex items-start gap-4">
        <span class="w-8 h-8 bg-gold text-white rounded-full flex items-center justify-center font-mono text-sm font-bold flex-shrink-0">2</span>
        <div>
          <strong class="text-ink">Add Guide Hand (5-8 feet)</strong>
          <p class="text-bark-soft text-sm">Guide hand balances, doesn't push</p>
        </div>
      </li>
      <li class="flex items-start gap-4">
        <span class="w-8 h-8 bg-gold text-white rounded-full flex items-center justify-center font-mono text-sm font-bold flex-shrink-0">3</span>
        <div>
          <strong class="text-ink">Extend Range (8-15 feet)</strong>
          <p class="text-bark-soft text-sm">Only move back when form is consistent</p>
        </div>
      </li>
      <li class="flex items-start gap-4">
        <span class="w-8 h-8 bg-gold text-white rounded-full flex items-center justify-center font-mono text-sm font-bold flex-shrink-0">4</span>
        <div>
          <strong class="text-ink">Add Movement (catch and shoot)</strong>
          <p class="text-bark-soft text-sm">Footwork + release timing</p>
        </div>
      </li>
    </ol>
  </section>
</ClusterHubLayout>
