{
  "$ref": "#/definitions/drills",
  "definitions": {
    "drills": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "ball-handling",
            "shooting",
            "footwork",
            "defense",
            "barefoot",
            "balance",
            "strength",
            "pain-relief",
            "silent-training"
          ]
        },
        "cluster": {
          "type": "string",
          "enum": [
            "silent-training",
            "home-training",
            "shooting-mechanics",
            "pain-relief",
            "foot-structure",
            "injury-rehab"
          ]
        },
        "sport": {
          "type": "string",
          "enum": [
            "basketball",
            "barefoot",
            "all-sports"
          ]
        },
        "author": {
          "type": "string"
        },
        "ageMin": {
          "type": "number",
          "minimum": 5,
          "maximum": 18
        },
        "ageMax": {
          "type": "number",
          "minimum": 5,
          "maximum": 18
        },
        "duration": {
          "type": "string"
        },
        "reps": {
          "type": "string"
        },
        "difficulty": {
          "type": "string",
          "enum": [
            "beginner",
            "intermediate",
            "advanced",
            "scalable"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string"
        },
        "coachNote": {
          "type": "string"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "instruction": {
                "type": "string"
              },
              "durationSeconds": {
                "type": "number"
              },
              "videoUrl": {
                "type": "string"
              }
            },
            "required": [
              "instruction"
            ],
            "additionalProperties": false
          }
        },
        "coachingCues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "commonMistake": {
          "type": "string"
        },
        "mistakeFix": {
          "type": "string"
        },
        "videoUrl": {
          "type": "string"
        },
        "thumbnailUrl": {
          "type": "string"
        },
        "relatedDrills": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "slug",
        "category",
        "sport",
        "author",
        "ageMin",
        "ageMax",
        "duration",
        "reps",
        "difficulty",
        "tags",
        "description",
        "steps",
        "coachingCues"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}