{
  "name": "yp-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:convex": "convex dev",
    "convex:deploy": "convex deploy",
    "convex:seed": "convex run authors:seedJamesScott && convex run authors:seedAdamHarrington",
    "lint": "turbo run lint",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "turbo run test",
    "test:critical": "turbo run test:critical",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "migrate:content": "tsx scripts/migrate-content.ts",
    "machine:mine": "tsx tools/machine-sprint/cli.ts mine",
    "machine:opps": "tsx tools/machine-sprint/cli.ts opps",
    "machine:generate": "tsx tools/machine-sprint/cli.ts generate",
    "machine:run": "tsx tools/machine-sprint/cli.ts run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.0",
    "@google/generative-ai": "^0.24.1",
    "commander": "^14.0.2",
    "convex": "^1.17.0",
    "dotenv": "^17.2.3",
    "openai": "^6.16.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^22.10.0",
    "gray-matter": "^4.0.3",
    "tsx": "^4.19.0",
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}
